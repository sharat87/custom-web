{
  "name": "Custom Web",
  "version": "0.1",
  "description": "Customize the web by adding your own js and css to websites.",
  "permissions": ["tabs", "<all_urls>", "storage"],
  "background": {"scripts": ["background.js"]},
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Customize this site"
  },
  "content_scripts": [{"matches": ["<all_urls>"], "js": ["editor.js"], "css": ["editor.css"]}],
  "options_page": "options.html",
  "web_accessible_resources": ["editor.html"],
  "manifest_version": 2
}
