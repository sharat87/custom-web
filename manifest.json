{
  "name": "Custom Web",
  "version": "0.1",
  "description": "Customize the web by adding your own js and css to websites.",
  "permissions": ["storage"],
  "background": {"scripts": ["background.js"]},
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Customize this site"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["editor.css"],
    "js": ["vendor/behave.js", "editor.js"]
  }],
  "options_page": "options.html",
  "web_accessible_resources": ["editor.html"],
  "manifest_version": 2
}
