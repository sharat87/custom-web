#custom-web-box
  display none
  position fixed
  background white
  color #222
  font 14px sans
  top 0
  width 340px
  height 100%
  box-sizing border-box
  overflow-y auto
  z-index 9999999999
  box-shadow 0 0 6px rgba(0, 0, 0, .7)

  *
    box-sizing border-box

  .cweb-t
    color inherit
    font-family serif
    font-size 1.2em
    padding 3px

  textarea
    width 100%
    height auto
    display block
    font-family monospace
    font-size inherit
    padding 6px
    margin-top 3px
    border-style solid
    border-width 1px 0
    border-color rgba(0, 0, 0, .3)
    border-radius 0
    background-color rgba(0, 0, 0, .03)
    color inherit
    overflow-y hidden

    &:focus
      border-color black
      outline none

  button, a
    display inline-block
    float right
    text-decoration none
    font inherit
    cursor pointer
    margin 3px
    padding 3px 6px
    background-color inherit
    color inherit
    border-radius 2px
    border 1px solid rgba(0, 0, 0, .4)
    box-shadow 0 1px 0 @border-color

    &:hover
      background-color rgba(0, 0, 0, .1)

    &:active
      box-shadow none
