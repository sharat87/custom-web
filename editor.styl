#custom-web-box
  position fixed
  background white
  color #333
  right 0
  top 0
  width 340px
  height 100%
  padding 6px
  box-sizing border-box
  z-index 99999
  box-shadow 0 0 6px rgba(0, 0, 0, .7)

  *
    box-sizing border-box

  &.left
    right auto
    left 0

  label
    display block
    margin-bottom 12px

  textarea
    width 100%
    height 120px
